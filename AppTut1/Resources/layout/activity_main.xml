                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView1" />
            <TextView
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="50sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2" />
            <Button
                android:text="P"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonLetterP" />
            <Button
                android:text="A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonLetterA" />
            <Button
                android:text="U"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonLetterU" />
            <Button
                android:text="L"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonLetterL" />
            <Button
                android:text="H"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonLetterH" />
            <Button
                android:text="O"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonLetterO" />
            <Button
                android:text="U"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonLetterU2" />
            <Button
                android:text="D"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonLetterD" />
            <Button
                android:text="E"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonLetterE" />
            <Button
